<article>
  {{#each .}}
    <section>
      <div class="container">
        <h1>{{title}}</h1>
        <p>{{description}}</p>
        <h4>{{pincode}}</h4>
        <h4>{{address}}</h4>
        <!--reply-button is hidden by default till user login-->
        <button class="reply-button">Reply</button>
        <!--reply class is hidden by default-->
        <div class="reply-block">
          <textarea rows="4" cols="50"></textarea><br>
          <button class="reply-submit" data-id={{_id}}>send</button>
          <button class="reply-cancel">cancel</button>
        </div>
      </div>
    </section>
  {{/each}}
</article>
